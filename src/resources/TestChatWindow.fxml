<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox style="-fx-background-color: grey" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
            <TextArea fx:id="chatArea" disable="true" prefHeight="375.0" prefWidth="300.0" wrapText="true" />
      <HBox prefHeight="39.0" prefWidth="200.0">
         <children>
                  <TextField fx:id="input" minHeight="-Infinity" minWidth="-Infinity" promptText="type your message" HBox.hgrow="ALWAYS" />
                  <Button fx:id="sendBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="50.0" text="Send" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
