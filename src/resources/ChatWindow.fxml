<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chatVbox" prefHeight="400.0" prefWidth="300.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ChatWindowController">
    <children>
      <TextArea fx:id="chatArea" editable="false" prefHeight="539.0" wrapText="true" VBox.vgrow="ALWAYS" />
        <HBox fx:id="chatHbox" prefHeight="39.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <children>
                <TextField fx:id="input" onAction="#sendButtonClicked" promptText="type your message" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#sendButtonClicked" text="Send" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </children>
</VBox>
